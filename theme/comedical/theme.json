{
  "$schema": "https://schemas.wp.org/wp/6.5/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        {
          "slug": "dark-navy",
          "name": "Dark Navy",
          "color": "#0B1320"
        },
        {
          "slug": "orange-accent",
          "name": "Orange Accent",
          "color": "#FF7A1A"
        },
        {
          "slug": "white",
          "name": "White",
          "color": "#FFFFFF"
        },
        {
          "slug": "muted-text",
          "name": "Muted Text",
          "color": "#B7C3D4"
        }
      ]
    },
    "layout": {
      "contentSize": "760px",
      "wideSize": "1200px"
    },
    "spacing": {
      "units": ["px", "rem", "%", "vw"],
      "spacingScale": {
        "steps": 7,
        "mediumStep": 1.5
      },
      "spacingSizes": [
        {
          "slug": "xs",
          "name": "XS",
          "size": "0.5rem"
        },
        {
          "slug": "sm",
          "name": "S",
          "size": "1rem"
        },
        {
          "slug": "md",
          "name": "M",
          "size": "1.5rem"
        },
        {
          "slug": "lg",
          "name": "L",
          "size": "2.5rem"
        },
        {
          "slug": "xl",
          "name": "XL",
          "size": "4rem"
        },
        {
          "slug": "xxl",
          "name": "XXL",
          "size": "6rem"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "\"Inter\", \"Segoe UI\", sans-serif",
          "name": "Inter",
          "slug": "inter"
        }
      ],
      "fontSizes": [
        {
          "slug": "body",
          "name": "Body",
          "size": "1rem"
        },
        {
          "slug": "h2",
          "name": "Heading 2",
          "size": "2.5rem"
        },
        {
          "slug": "h1",
          "name": "Heading 1",
          "size": "3.5rem"
        }
      ],
      "lineHeight": true
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": "999px"
        },
        "typography": {
          "fontSize": "1rem",
          "fontWeight": "600",
          "lineHeight": "1.2"
        },
        "spacing": {
          "padding": {
            "top": "0.9rem",
            "right": "1.5rem",
            "bottom": "0.9rem",
            "left": "1.5rem"
          }
        }
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--dark-navy)",
      "text": "var(--wp--preset--color--white)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "fontSize": "var(--wp--preset--font-size--body)",
      "lineHeight": "1.6"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontWeight": "700",
          "lineHeight": "1.1"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--h1)"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--h2)"
        }
      },
      "button": {
        "border": {
          "radius": "999px"
        },
        "color": {
          "background": "var(--wp--preset--color--orange-accent)",
          "text": "var(--wp--preset--color--white)"
        }
      }
    },
    "blocks": {
      "core/button": {
        "variations": {
          "outline": {
            "border": {
              "color": "var(--wp--preset--color--white)",
              "style": "solid",
              "width": "2px"
            },
            "color": {
              "background": "transparent",
              "text": "var(--wp--preset--color--white)"
            }
          },
          "fill": {
            "color": {
              "background": "var(--wp--preset--color--orange-accent)",
              "text": "var(--wp--preset--color--white)"
            }
          }
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ]
}
